{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=apexshop;Username=apexshop;Password=apexshop123",
    "Redis": "localhost:6379"
  },
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://*:443",
        "Protocols": "Http1AndHttp2AndHttp3"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Warning",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
    }
  },
  "Streaming": {
    "MaxRecords": 100000,
    "FlushInterval": 10,
    "RateLimit": {
      "PolicyName": "streaming",
      "PermitLimit": 5,
      "WindowMinutes": 1,
      "EnableQueueing": false,
      "MaxQueueLength": 0,
      "PartitionKey": "userId"
    },
    "Audit": {
      "Enabled": true,
      "LogDetailedFilters": true,
      "LogSuccessful": true,
      "LogLevel": "Information"
    }
  },
  "AllowedHosts": "*"
}
